{
	"compilerOptions": {
		"module": "esnext",
		"outDir": "./dist/esm",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"lib": [
			"es2021"
		],
	},
	"include": [
		"src/"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	],
	"types": [
		"node"
	]
}
